{% extends 'base.html.twig' %}

{% block title %}Hello ExamController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

     <table class="table" style="border: 2px black solid">
         <tr style="border: 2px black solid">
             <td style="border: 2px black solid">NOM</td>
             <td style="border: 2px black solid">Prix</td>
             <td style="border: 2px black solid">Actions</td>
         </tr>
         {% for a in article %}
            <tr style="border: 2px black solid">
             <td style="border: 2px black solid">{{ (a.getNom()|upper)|trim }}</td>
             <td style="border: 2px black solid">
                <p> prix en HT :{{ a.getPrix()|number_format(2,'.',',') }}</p>
                <p>prix en TTC:{{ (a.getPrix()*0.81)|number_format(2,'.',',') }}</p>
             </td>
             <td style="border: 2px black solid">
                 <a href="{{ path('detail_exam',{'id':a.id}) }}" class="btn btn-primary">Details</a>
                 <a href="{{ path('edit_exam',{'id':a.id}) }}" class="btn btn-primary">Modifier</a>
                 <a href="{{ path('del_exam',{'id':a.id}) }}" class="btn btn-primary">Delete</a>
             </td>
            </tr>
         {% endfor %}
     </table>
 </header>
{% endblock %}
